{
  "name": "somira-theme",
  "version": "1.0.0",
  "description": "Somira WordPress theme with custom blocks",
  "scripts": {
    "build": "for dir in blocks/*/; do block=$(basename \"$dir\"); if [ -f \"$dir/src/index.js\" ]; then echo \"Building $block...\"; wp-scripts build \"$dir/src/index.js\" --output-path=\"$dir/dist\"; fi; done",
    "start": "node -e \"const fs = require('fs'); const { execSync } = require('child_process'); const blocks = fs.readdirSync('blocks').filter(block => block && fs.statSync('blocks/' + block).isDirectory() && fs.existsSync('blocks/' + block + '/src/index.js')); const commands = blocks.map(block => 'wp-scripts start blocks/' + block + '/src/index.js --output-path=blocks/' + block + '/dist'); execSync('npx concurrently --names=' + blocks.join(',') + ' ' + commands.map(cmd => '\\'' + cmd + '\\'').join(' '), { stdio: 'inherit' });\"",
    "build:hero": "wp-scripts build blocks/hero/src/index.js --output-path=blocks/hero/dist",
    "build:carousel": "wp-scripts build blocks/carousel/src/index.js --output-path=blocks/carousel/dist",
    "build:cta": "wp-scripts build blocks/cta/src/index.js --output-path=blocks/cta/dist",
    "build:custom-link": "wp-scripts build blocks/custom-link/src/index.js --output-path=blocks/custom-link/dist",
    "build:product-showcase": "wp-scripts build blocks/product-showcase/src/index.js --output-path=blocks/product-showcase/dist",
    "build:faq-accordion": "wp-scripts build blocks/faq-accordion/src/index.js --output-path=blocks/faq-accordion/dist",
    "build:scroll-video-sections": "wp-scripts build blocks/scroll-video-sections/src/index.js --output-path=blocks/scroll-video-sections/dist",
    "start:hero": "wp-scripts start blocks/hero/src/index.js --output-path=blocks/hero/dist",
    "start:carousel": "wp-scripts start blocks/carousel/src/index.js --output-path=blocks/carousel/dist",
    "start:cta": "wp-scripts start blocks/cta/src/index.js --output-path=blocks/cta/dist",
    "start:custom-link": "wp-scripts start blocks/custom-link/src/index.js --output-path=blocks/custom-link/dist",
    "start:product-showcase": "wp-scripts start blocks/product-showcase/src/index.js --output-path=blocks/product-showcase/dist",
    "start:faq-accordion": "wp-scripts start blocks/faq-accordion/src/index.js --output-path=blocks/faq-accordion/dist",
    "start:scroll-video-sections": "wp-scripts start blocks/scroll-video-sections/src/index.js --output-path=blocks/scroll-video-sections/dist",
    "packages-update": "wp-scripts packages-update",
    "check-engines": "wp-scripts check-engines",
    "lint:css": "wp-scripts lint-style",
    "lint:js": "wp-scripts lint-js",
    "format": "wp-scripts format"
  },
  "devDependencies": {
    "@wordpress/scripts": "^30.0.2",
    "concurrently": "^8.2.2"
  },
  "dependencies": {
    "@wordpress/block-editor": "^12.21.0",
    "@wordpress/blocks": "^12.29.0",
    "@wordpress/components": "^27.0.0",
    "@wordpress/element": "^5.29.0",
    "@wordpress/i18n": "^4.51.0",
    "flickity": "^3.0.0"
  }
}